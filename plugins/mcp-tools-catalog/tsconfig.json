{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "src/**/*",
    "dev/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types"
  ],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmitOnError": false
  }
}